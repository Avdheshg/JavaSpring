<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="student" class="fundamentals.practice.basic.beans.Student">
        <constructor-arg name="firstName" value="Avdhesh"/>
        <constructor-arg name="lastName" value="Gautam"/>
        <property name="rollNo" value="12"/>
        <property name="address" value="Mathura"/>
    </bean>

    <bean id="schoolClass" class="fundamentals.practice.basic.beans.SchoolClass">
        <property name="student" ref="student"/>
        <property name="name" value="8th"/>
        <property name="floorNo" value="2"/>
        <property name="teacherName" value="Rajeev Kumar"/>
    </bean>

</beans>